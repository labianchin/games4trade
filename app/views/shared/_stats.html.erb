<% @user ||= current_user if @user.nil?%>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= wishlist_user_path(@user) %>">
          <span id="wishlist" class="stat">
            <%= @user.wishlist_items.count %> <%=t "games in the wishlist" %>
          </span>
        </a>
      </td>
      <td>
        <a href="<%= repository_user_path(@user) %>">
          <span id="repository" class="stat">
          	<%= @user.repository_items.count %> <%=t "games in the repository" %>
          </span>
        </a>
      </td>
    </tr>
  </table>
  <h3><%=t "Total Reputation Points: "%><%= @user.points %></h3>
  <ul>
  <% @user.reputations.each do |reputation| %>
	  <li>
	  <b><%= reputation.reputer.name %>: </b>(<%= reputation.points %>): <%= reputation.review %>
	  </li>
  <% end %>
  </ul>
</div>
